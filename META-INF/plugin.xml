<idea-plugin version="2">
  <id>collabs</id>
  <name>Collabs</name>
  <version>1.0.2</version>
  <vendor email="alekseevmsc@gmail.com" url="https://github.com/alexcodes/Collabs">Collabs</vendor>

  <description><![CDATA[
      This plugin gives an opportunity of <strong>real-time</strong> collaborative editing.
      For more information, please, visit <a href="https://github.com/alexcodes/Collabs">site</a>.
    ]]></description>

  <change-notes><![CDATA[
      -
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
      <component>
          <implementation-class>collabs.view.toolbar.CollabsProjectComponent</implementation-class>
      </component>
  </project-components>

  <actions>
      <action class="collabs.model.actions.ConnectAction" id="actions.ConnectAction"
              text="Connect..." description="Connect to server"/>
      <action class="collabs.model.actions.DisconnectAction" id="actions.DisconnectAction"
              text="Disconnect" description="Disconnect from server"/>
      <action class="collabs.model.actions.RegisterDocumentAction" id="actions.RegisterDocumentAction"
              text="Register Document" description="Create copy of this document on server"/>
      <action class="collabs.model.actions.BindDocumentAction" id="actions.BindDocumentAction"
              text="Bind Document" description="Bind bidirectional this document and server one"/>
      <action class="collabs.model.actions.UnbindDocumentAction" id="actions.UnbindDocumentAction"
              text="Unbind Document" description="Unbind document and server one"/>
      <action class="collabs.model.actions.RefreshListAction" id="actions.RefreshListAction"
              text="Refresh List" description="Refresh list of registered documents"/>
      <!--??Delete??-->
      <action class="collabs.model.actions.SubscribeAction" id="actions.SubscribeAction"
              text="Subscribe" description="Bind this document and server one"/>

      <action class="collabs.model.actions.StartServerAction" id="actions.StartServerAction" text="Start Server"/>
      <action class="collabs.model.actions.StopServerAction" id="actions.StopServerAction" text="Stop Server"/>

      <group id="CollabsEditor" popup="true" text="Collabs">
          <add-to-group anchor="last" group-id="EditorPopupMenu"/>
          <reference ref="actions.RegisterDocumentAction"/>
          <reference ref="actions.BindDocumentAction"/>
          <reference ref="actions.UnbindDocumentAction"/>
      </group>
  </actions>

</idea-plugin>